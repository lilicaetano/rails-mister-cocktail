<div id="show-cocktail" class="show-cocktail">
  <h1><%= @cocktail.name.capitalize  %></h1>
</div>

<div class="cocktail-card-recipe">
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  
  <div class="row">
    <div class="col-sm-12 col-md-6">

    
    <h3>Description</h3>
      <p><%= @cocktail.description %></p>
      <%= link_to "Delete", cocktail_path(@cocktail), method: :delete, class: "btn btn-danger" %>
    
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Quantity</th>
            <th>Ingredient</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.description %></td>
              <td><%= dose.ingredient.name %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
</div>

<div class="back-link">
  <%= link_to "← Back to list", cocktails_path %>
</div>