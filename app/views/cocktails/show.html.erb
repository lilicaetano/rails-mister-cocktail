<div id="show-cocktail" class="show-cocktail">
  <h1><%= @cocktail.name.capitalize  %></h1>
</div>
<div id="img-cocktail" class="img-cocktail">
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
</div>
<ul>
<%  @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %></li>
  <%= dose.description %>
  <%= link_to 'Remove ingredient', cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
</ul>
