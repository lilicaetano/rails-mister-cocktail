<div class="navbar">
  <a><%= link_to "The Mixologist", cocktails_path %></a>
</div>

<div class="cocktail-card-recipe">
  <%= cl_image_tag @cocktail.photo %>
  
  <div class="col-sm-12 col-md-6">

    <h1><%= @cocktail.name.capitalize  %></h1>

    <p><%= @cocktail.description %></p>
    
    <h2>Recipe</h2>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Quantity</th>
            <th>Ingredient</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.description %></td>
              <td><%= dose.ingredient.name %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete this ingredient?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        <a><%= link_to 'Edit', new_cocktail_dose_path(@cocktail), class: "btn btn-cocktails"%></a>
        <a><%= link_to "Delete", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure you want to delete this cocktail?" }, class: "btn btn-cocktails" %></a>
      </div>
  </div>
</div>

<div class="back-link">
  <%= link_to "← Back", cocktails_path %>
</div>